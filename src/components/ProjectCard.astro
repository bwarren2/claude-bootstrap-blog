---
import StatusBadge from "./StatusBadge.astro";
import TechTag from "./TechTag.astro";
import DifficultyRating from "./DifficultyRating.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const { title, description, status, difficulty, techStack, tags, pubDate, costTracking } = project.data;
const base = import.meta.env.BASE_URL.replace(/\/?$/, "/");
const formattedDate = pubDate.toLocaleDateString("en-US", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<article
  class="group rounded-xl border border-border bg-surface hover:border-brand/50 transition-all duration-200 hover:shadow-lg hover:shadow-brand/5 overflow-hidden"
  data-status={status}
  data-tech={techStack.join(",")}
  data-tags={tags.join(",")}
>
  <a href={`${base}projects/${project.id}/`} class="block p-5">
    <div class="flex items-start justify-between gap-3 mb-3">
      <h3 class="text-lg font-semibold text-text-primary group-hover:text-brand transition-colors line-clamp-2">
        {title}
      </h3>
      <StatusBadge status={status} size="sm" />
    </div>

    <p class="text-sm text-text-secondary mb-4 line-clamp-2">{description}</p>

    <div class="flex flex-wrap gap-1.5 mb-4">
      {techStack.slice(0, 5).map((tech) => <TechTag tech={tech} size="sm" />)}
      {techStack.length > 5 && (
        <span class="px-2 py-0.5 text-xs text-text-secondary">+{techStack.length - 5}</span>
      )}
    </div>

    <div class="flex items-center justify-between text-xs text-text-secondary">
      <div class="flex items-center gap-3">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        <DifficultyRating difficulty={difficulty} />
      </div>
      {
        costTracking?.totalCost != null && (
          <span class="font-mono">${costTracking.totalCost.toFixed(2)}</span>
        )
      }
    </div>
  </a>
</article>
