---
import { getTechniqueLabel } from "@data/techniques";

interface Props {
  technique: string;
  size?: "sm" | "md";
}

const { technique, size = "sm" } = Astro.props;
const label = getTechniqueLabel(technique);

const sizeClasses = {
  sm: "px-2 py-0.5 text-xs",
  md: "px-2.5 py-1 text-sm",
};
---

<span
  class:list={[
    "inline-flex items-center rounded-md bg-brand-dark/10 text-brand-dark dark:bg-brand-light/10 dark:text-brand-light font-medium",
    sizeClasses[size],
  ]}
  title={technique}
>
  {label}
</span>
