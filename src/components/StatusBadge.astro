---
interface Props {
  status: "complete" | "in-progress" | "abandoned";
  size?: "sm" | "md";
}

const { status, size = "md" } = Astro.props;

const colors = {
  complete: "bg-status-complete/10 text-status-complete border-status-complete/30",
  "in-progress": "bg-status-in-progress/10 text-status-in-progress border-status-in-progress/30",
  abandoned: "bg-status-abandoned/10 text-status-abandoned border-status-abandoned/30",
};

const labels = {
  complete: "Complete",
  "in-progress": "In Progress",
  abandoned: "Abandoned",
};

const sizeClasses = {
  sm: "px-2 py-0.5 text-xs",
  md: "px-2.5 py-1 text-sm",
};
---

<span class:list={["inline-flex items-center rounded-full border font-medium", colors[status], sizeClasses[size]]}>
  {labels[status]}
</span>
